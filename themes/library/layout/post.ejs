<div class="content">
  <div class="banner">
    <div class="container">
      <h1><%= page.title %></h1>
      <div class="info">
        <span class="date"><%- date(page.date, "YYYY - M - D") %></span> • <%=
        config.author %> <% if (page.categories && page.categories.length){ %> • 
        《<%- list_categories(page.categories, { show_count: false, class:
        'capitalize ', style: 'none', separator: '' }) %>》
        <% } %> <% if (theme.github.repo && theme.github.edit) { %>
        <a
          href="<%= 'https://github.com/' + theme.github.repo + '/tree/master/source/' + page.source %>"
          target="_blank"
          rel="external nofollow noreferrer noopener"
          >Edit</a
        >
        <% } %>
      </div>
    </div>
  </div>
  <div class="container">
    <article class="post">
      <div class="card">
        <% if (page.card) { %>
        <img src="<%- page.card.poster %>" alt="poster" />
        <div class="card-content">
          <div><%- page.card.details %></div>
          <div><strong>Released: </strong><%- page.card.released %></div>
          <div><strong>My Rating: </strong><%- page.card.rating %></div>
          <a href="<%- page.card.more %>">Read More</a>
        </div>
        <hr />
        <% } %>
        <%- toc(page.content) %>
      </div>

      <%- page.content %>
      <br />
      <%- list_tags(page.tags, { show_count: true, style: "unordered list",
      separator: ", " }) %>
    </article>
  </div>
  <div class="other">
    <div class="container">
      <%- is_post() ? partial('_partial/post-nav') : '' %>
    </div>
  </div>
  <div class="container comment">
    <%- theme.comment ? partial('_partial/_comment/' + theme.comment) : '' %>
  </div>
</div>
