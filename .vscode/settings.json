{
  "files.autoSave": "onFocusChange",
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    }
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "files.exclude": {
    "**/_site": true,
    "bubbles/.obsidian": true,
    "bubbles/.trash": false,
    ".stfolder": true,
    ".jekyll-cache": false
  },
  "files.watcherExclude": {
    "**/_site": true,
    "bubbles/.obsidian": true,
    "bubbles/.trash": true,
    ".stfolder": true
  },
  "files.insertFinalNewline": true,
  "markdown.styles": [".vscode/custom-tag-style.css"],
  "markdownlint.config": {
    "default": true,
    "MD025": {
      "front_matter_title": ""
    },
    "MD026": {
      "punctuation": ".,;:"
    },
    "MD053": {
      "ignored_definitions": ["//begin", "//end"]
    }
  },
  "cSpell.words": [
    "Aerians",
    "Arion",
    "Eldoria",
    "Fireborn",
    "Gemfolk",
    "Ilmaria",
    "Merfolk",
    "Sunaara",
    "Thorne",
    "Wyrms",
    "Zarim"
  ]
}
