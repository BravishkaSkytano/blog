                    {{ post.data.subtitle }}
                  </h3>
                </div>
                {% if post.data.description %}
                  {% else %}
                {% endif %}
                <p>{{ post.content | excerpt }}</p>
                {% if post.data.tags %}
                  <p class="text-small">
                    <strong>Tags:
                    </strong>
                    {%- for tag in post.data.tags -%}
                      {{ tag }}
                      {% if not loop.last %},
                      {% endif %}
                    {%- endfor -%}
                  </p>
                {% endif %}
              </div>
            </a>
          </div>
        {%- endfor -%}
      </div>
      <p style="text-align: right;">
        <a href="/characters">View more -></a>
      </p>
    </section>
    <section>
      <h2>Worlds</h2>
