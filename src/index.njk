---
title: Home
eleventyNavigation:
  key: home
  order: 1
  icon: home
---

{% extends 'base.njk' %}
{% block hero %}
  <div class="hero">
    <div class="hero__content">
      <h1>{{ metadata.title }}</h1>
      <h3>{{ metadata.tagline }}</h3>
    </div>
    <picture>
      <img src="{{ metadata.logo }}" alt="Site logo" width="960" height="640"></picture>
    </div>
  {% endblock hero %}
  {% block content %}
    <section>
      <h2>Announcements</h2>
      <ul>
        {%- for post in collections.announcements.slice(0, 7) -%}
          <li>
            {{ post.date.toLocaleString( undefined, { year: 'numeric',
      month: 'long', day: 'numeric' }) }} -
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </li>
        {%- endfor -%}
        <li>
          <a href="/archives">View more -></a>
        </li>
      </ul>
    </section>
    <section>
      <h2>Posts</h2>
      <div class="cards">
        {%- for post in collections.posts.slice(0, 12) -%}
          <div class="card">
            <a href="{{ post.url }}">
              <div class="card-content">
                <time class="text-small" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
                <div class="heading-group">
                  <h2>
                    {{ post.data.title }}
                  </h2>
                  <h3>
                    {{ post.data.subtitle }}
                  </h3>
                </div>
                {% if post.data.description %}
                  {% else %}
                {% endif %}
                <p>{{ post.content | excerpt }}</p>
                {% if post.data.tags %}
                  <p class="text-small">
                    <strong>Tags:
                    </strong>
                    {%- for tag in post.data.tags -%}
                      {{ tag }}
                      {% if not loop.last %},
                      {% endif %}
                    {%- endfor -%}
                  </p>
                {% endif %}
              </div>
            </a>
          </div>
        {%- endfor -%}
      </div>
      <p style="text-align: right;">
        <a href="/posts">View more -></a>
      </p>
    </section>
    <section>
      <h2>Characters</h2>
      <div class="cards">
        {%- for post in collections.characters.slice(0, 12) -%}
          <div class="card">
            <a href="{{ post.url }}">
              <div class="card-thumbnail">
                <img src="{% if post.data.image %}{{ post.data.image }}{% else %}https://placehold.co/1024?text={% endif %}" loading="lazy" alt="{{ post.data.title }}" class="card-thumbnail"/>
              </div>
              <div class="card-content">
                <time class="text-small" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
